
<div class="container">
  <div class="card text-center">
    <h4><%= @cocktail.name  %></h4>
    <ul><% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> -  <%= dose.ingredient.name %></li>

    <% end %>
    <%= link_to 'Back', cocktails_path, class: "btn btn-outline-secondary"%>

    <%= link_to 'Add Ingredient', new_cocktail_dose_path(@cocktail), class: "btn btn-outline-secondary"%>

    <%= link_to 'edit', cocktail_doses_path(@cocktail), class: "btn btn-outline-secondary"%>





  </div>

</div>
